package com.pojo;

public class Employee extends Person {
	private double empSalary;
	private int empId;
	//default constructor
	public Employee()
	{
		setEmpId(20148050);
		setEmpSalary(1000);
	}
	public Employee(double salary, int empId)
	{
		this.setEmpSalary(salary);
		this.setEmpId(empId);
	}
	public double getEmpSalary() {
		return empSalary;
	}
	public void setEmpSalary(double empSalary) {
		this.empSalary = empSalary;
	}
	public int getEmpId() {
		return empId;
	}
	public void setEmpId(int empId) {
		this.empId = empId;
	}
	public void show()
	{   display();
		System.out.println(empId+"\t"+empSalary);
		//System.out.println(getName()+"\t"+getAge());
		
	}

}
